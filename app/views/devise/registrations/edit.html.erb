
<%= render "devise/shared/brand" %>

<div class="login-panel panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Change password</h3>
  </div>
  <div class="panel-body">
    <%= devise_error_messages! %>
    <%= bootstrap_form_for(resource,
                            as: resource_name,
                            url: user_registration_path,
                            html: { method: :put }) do |f| %>
      <fieldset>
        <%= f.password_field :current_password,      label: 'Current password',    autocomplete: "off", autofocus: true  %>
        <%= f.password_field :password,              label: 'New password',        autocomplete: "off" %>
        <%= f.password_field :password_confirmation, label: 'Repeat new password', autocomplete: "off" %>
        <div class="actions">
          <%= f.submit "Change password", class: 'btn btn-success btn-block' %>
        </div>
      </fieldset>
    <% end %>
    </form>
  </div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
